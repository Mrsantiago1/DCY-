<!doctype html>
<html>

<head>
  <title>DCY's Universal blog</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container login-container">
    <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span> Login</h1>
      <!-- this correlates to req.flash on the server.js -->
      <% if (message.length > 0) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
        <% } %>

          <!-- LOGIN FORM -->
          <form action="/login" method="post">
            <div class="form-group">
              <label>Username</label>
              <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Login</button>
          </form>
          <!-- <img src="img/pic1.png" alt=""> -->
          <hr>

          <p>Need an account? <a href="/signup">Signup</a> Or go <a href="/">home</a>.</p>


    </div>
    <div class="col-sm-6 brains">
      <img src="img/pic1.png" height="500" width="350"alt="">
    </div>
  </div>
</body>

</html>
